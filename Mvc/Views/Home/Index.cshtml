@model GalleryIndexViewModel
@inject IConfiguration Configuration

<div class="bottomMarginDefault">
</div>

<div class="container">

  <div class="row">
    @foreach (var item in Model.ImageModels)
    {
      <div class="pull-left col-md-4">
        <div>
          <img class="thumbnailImage" src="@($"{Configuration["Url:Api"]}/images/{item.FileName}")" />
        </div>
        <div>
          <div class="h5">@item.Title</div>
          <div class="bottomMarginDefault">
            <a asp-action="EditImage" asp-controller="Home" asp-route-id="@item.Id">Edit title</a> |
            <a asp-action="DeleteImage" asp-controller="Home" asp-route-id="@item.Id">Delete image</a>
          </div>
        </div>
      </div>
    }
  </div>
</div>

